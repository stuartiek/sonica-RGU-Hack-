<!DOCTYPE html>
<html>
    <head>
        <title>Wildlife Data Form</title>
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="theme-color" content="#ffffff">
        <link rel="apple-touch-icon" href="styles/images/logo/UWP/ABZ_icon256.png">
        <link rel="icon" type="image/x-icon" href="images/logo/favicon.png">
        <link rel="stylesheet" href="css/main.css"/>
        <script src="js/geo.js"></script>
    </head>
    <body>
        <%- include('../partials/header') %>

        <div>
            <!-- Insert Here -->
            <% wildlife.forEach(function(wildlife) { %>
                <tr>
                    <td><%= wildlife.wildlifeObservation %></td>
                    <td><%= wildlife.wildImage %></td>
                    <td><%= wildlife.species %></td>
                    <td><%= wildlife.Location %></td>
                    <td><%= wildlife.SpeciesImage %></td>
                    <td>£<%= wildlife.username %></td>
                    <td>£<%= wildlife.date %></td>
                </tr>
        <% }); %>
        </div>
    </body>
</html>